<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.heliocor.testsdk.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btn_read_passport_with_nfc"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/m_transparent"
            android:text="NFC + Passport"

            android:textAllCaps="false"
            android:textColor="@color/blue_text_main"
            android:textSize="28sp" />

        <Button
            android:id="@+id/btn_onBoard"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/m_transparent"
            android:text="onBoardProcess"
            android:textAllCaps="false"
            android:textColor="@color/blue_text_main"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btn_onBoardNFC"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/m_transparent"
            android:text="onBoardProcess + nfc"
            android:textAllCaps="false"
            android:textColor="@color/blue_text_main"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_read_passport"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/m_transparent"
            android:text="passportCapture"
            android:textAllCaps="false"
            android:textColor="@color/blue_text_main"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_read_idcard"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/m_transparent"
            android:text="idCardCapture"
            android:textAllCaps="false"
            android:textColor="@color/blue_text_main"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_process_selfie"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/m_transparent"
            android:text="selfieCompare"
            android:textAllCaps="false"
            android:textColor="@color/blue_text_main"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_process_jpn_id"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/m_transparent"
            android:text="process_JPN_ID"
            android:textAllCaps="false"
            android:textColor="@color/blue_text_main"
            android:textSize="20sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_process_address"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:visibility="gone"
            android:background="@color/m_transparent"
            android:text="addressCapture"
            android:textAllCaps="false"
            android:textColor="@color/blue_text_main"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_process_id"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/m_transparent"
            android:text="identityCard_dokstorID"
            android:textAllCaps="false"
            android:textColor="@color/blue_text_main"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_process_passport"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/m_transparent"
            android:text="passport_dokstorID"
            android:textAllCaps="false"
            android:textColor="@color/blue_text_main"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btn_process_driveringLicence"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/m_transparent"
            android:text="drivingLicence_dokstorID"
            android:textAllCaps="false"
            android:textColor="@color/blue_text_main"
            android:textSize="20sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>